{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@umemee/*": ["shared/*/src"]
    }
  },
  "references": [
    { "path": "./shared/types" },
    { "path": "./shared/config" },
    { "path": "./shared/utils" },
    { "path": "./shared/api-client" },
    { "path": "./shared/ui-mobile" },
    { "path": "./shared/ui-web" },
    { "path": "./platforms/mobile" },
    { "path": "./platforms/web" },
    { "path": "./platforms/desktop" }
  ]
}