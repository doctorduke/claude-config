{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Comment Output",
  "description": "Schema for AI-powered issue comment response",
  "type": "object",
  "required": ["response"],
  "properties": {
    "response": {
      "type": "string",
      "description": "The AI-generated response in Markdown format",
      "minLength": 1
    },
    "actions": {
      "type": "array",
      "description": "Suggested actions based on the issue comment",
      "items": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["label", "assign", "milestone", "close", "reopen"],
            "description": "Type of action to take"
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of the action"
          },
          "value": {
            "type": "string",
            "description": "Value for the action (label name, assignee, etc.)"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata about the response",
      "properties": {
        "model": {
          "type": "string",
          "description": "AI model used for the response"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the response was generated"
        },
        "issue_number": {
          "type": "integer",
          "description": "Issue or PR number that was commented on"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for the response (0-1)"
        }
      }
    }
  }
}
