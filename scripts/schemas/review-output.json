{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Review Output",
  "description": "Schema for AI-powered code review output",
  "type": "object",
  "required": ["event", "body"],
  "properties": {
    "event": {
      "type": "string",
      "enum": ["APPROVE", "REQUEST_CHANGES", "COMMENT"],
      "description": "The review event type for GitHub PR review"
    },
    "body": {
      "type": "string",
      "description": "The review comment body in Markdown format",
      "minLength": 1
    },
    "comments": {
      "type": "array",
      "description": "Inline comments for specific lines in the diff",
      "items": {
        "type": "object",
        "required": ["path", "line", "body"],
        "properties": {
          "path": {
            "type": "string",
            "description": "File path relative to repository root"
          },
          "line": {
            "type": "integer",
            "minimum": 1,
            "description": "Line number in the file"
          },
          "body": {
            "type": "string",
            "minLength": 1,
            "description": "Comment text in Markdown format"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata about the review",
      "properties": {
        "model": {
          "type": "string",
          "description": "AI model used for the review"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the review was generated"
        },
        "pr_number": {
          "type": "integer",
          "description": "Pull request number that was reviewed"
        },
        "files_reviewed": {
          "type": "integer",
          "description": "Number of files analyzed"
        },
        "issues_found": {
          "type": "integer",
          "description": "Number of potential issues identified"
        }
      }
    }
  }
}
